<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yummiodmkschinky.deliveryboy">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <application
        android:name="com.yummiodmkschinky.deliveryboy.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.yummiodmkschinky.deliveryboy.activity.OrderTeackerActivity"></activity>
        <activity
            android:name="com.yummiodmkschinky.deliveryboy.activity.SignatureActivity"
            android:theme="@style/AppTheme1" />
        <activity
            android:name="com.yummiodmkschinky.deliveryboy.activity.SignatureGenieActivity"
            android:theme="@style/AppTheme1" />
        <activity
            android:name="com.yummiodmkschinky.deliveryboy.activity.OrderDeliverDetailsActivity"
            android:theme="@style/AppTheme1" />
        <activity
            android:name="com.yummiodmkschinky.deliveryboy.activity.OrderPendingDetailsActivity"
            android:theme="@style/AppTheme1" />
        <activity android:name="com.yummiodmkschinky.deliveryboy.activity.HomeActivity" />
        <activity
            android:name="com.yummiodmkschinky.deliveryboy.activity.LoginActivity"
            android:theme="@style/AppTheme1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.yummiodmkschinky.deliveryboy.MainActivity" />
        <activity
            android:name="com.yummiodmkschinky.deliveryboy.activity.ProfileActivity"
            android:theme="@style/AppTheme1" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/api_key" />
    </application>

</manifest>